<% if @article.errors.present? %>
  <%= simple_format @article.errors.full_messages.join("\n") %>
<% end %>

<%= form_for(@article) do |form| %>
  <div class="form-group">
    <%= form.label :question_body %>
    <%= form.text_area :question_body, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list, :class => "form-control" %>
  </div>
  <%= form.submit :class => "btn btn-default" %>
<% end %>
